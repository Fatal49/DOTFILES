
" Set the font
set guifont=Meslo\ LG\ L\ DZ\ for\ Powerline:h12

" Remove right-hand scrollbar
set guioptions-=r

" Remove right-hand scrollbar when there is a vertical split
set guioptions-=R

" Remove left-hand scrollbar
set guioptions-=l

" Remove left-hand scrollbar when there is a vertical split
set guioptions-=L
